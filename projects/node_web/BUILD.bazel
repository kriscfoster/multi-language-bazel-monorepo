load("@io_bazel_rules_docker//container:container.bzl", "container_image")
load("@io_bazel_rules_docker//container:layer.bzl", "container_layer")
load("@aspect_rules_js//js:defs.bzl", "js_library", "js_binary", "js_image_layer")

